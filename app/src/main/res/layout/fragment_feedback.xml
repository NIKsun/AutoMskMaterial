<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/shadow"
        android:layout_gravity="top" />

    <com.rey.material.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LightTitleText"
        android:textSize="35dp"
        android:text="Связаться со службой поддержки"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <com.rey.material.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LightTitleText"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Напишите нам о возникших вопросах и появившихся трудностях. Мы с радостью Вам поможем."
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <com.rey.material.widget.FloatingActionButton
        android:id="@+id/send_feedback"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        style="@style/LightFlatButtonRippleStyle"
        android:layout_marginTop="40dp" />

</LinearLayout>