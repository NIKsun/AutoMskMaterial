<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/shadow"
        android:layout_gravity="top" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/buyFirstItem"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_ads2"
                        android:layout_weight="25" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Отключить рекламу"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@color/textPurchaseColor"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/perchased"
                    android:scaleType="centerCrop"
                    android:layout_weight="25"
                    android:background="#21000000"
                    android:id="@+id/purchasedAdds"
                    android:visibility="gone"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/buySecondItem"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/stars2"
                        android:layout_weight="25" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Опция 'Мое избранное'"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@color/textPurchaseColor"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/perchased2"
                    android:scaleType="centerCrop"
                    android:layout_weight="25"
                    android:background="#21000000"
                    android:id="@+id/purchasedFavorites"
                    android:visibility="gone"/>

            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:weightSum="2"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/buyThirdItem"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/computer"
                        android:layout_weight="25" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Опция 'Мои мониторы'"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@color/textPurchaseColor"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/perchased2"
                    android:scaleType="centerCrop"
                    android:layout_weight="25"
                    android:background="#21000000"
                    android:id="@+id/purchasedMonitors"
                    android:visibility="gone" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/buyFourthItem"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/all"
                        android:layout_weight="25" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Пакет 'Все включено'"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@color/textPurchaseColor"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/perchased"
                    android:scaleType="centerCrop"
                    android:layout_weight="25"
                    android:background="#21000000"
                    android:id="@+id/purchasedAll"
                    android:visibility="gone"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>